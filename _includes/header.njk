{% from "icons.njk" import icon %}
<header class="sticky top-0 z-50 bg-white border-b border-gray-200 dark:bg-gray-900 dark:border-gray-700">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">

      <!-- Logo / Site Title -->
      <a href="/" class="flex items-center gap-2 text-xl font-bold text-gray-900 hover:text-primary-600 transition-colors dark:text-white">
        <span class="text-2xl">ðŸ’¡</span>
        <span class="hidden sm:inline">{{ site.title }}</span>
        <span class="sm:hidden">dFDA</span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-4">

        <!-- Docs Dropdown -->
        <div class="relative group">
          <button class="flex items-center gap-1 text-gray-600 hover:text-primary-600 transition-colors font-medium dark:text-gray-300">
            {{ icon(navigation.docs.icon) }}
            {{ navigation.docs.label }}
            {{ icon("chevron-down") }}
          </button>
          <div class="absolute left-0 top-full mt-2 w-64 bg-white rounded-lg shadow-lg border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all z-50 dark:bg-gray-800 dark:border-gray-700">
            <div class="py-2">
              {% for item in navigation.docs.items %}
                {% if item.divider %}
                  <div class="border-t border-gray-100 my-2 dark:border-gray-700"></div>
                {% else %}
                  <a href="{{ item.url }}"
                     {% if item.external %}target="_blank" rel="noopener"{% endif %}
                     class="flex items-center gap-3 px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-600 dark:text-gray-300 dark:hover:bg-gray-700">
                    <span class="text-gray-400">{{ icon(item.icon) }}</span>
                    {{ item.label }}
                    {% if item.external %}
                      <span class="ml-auto opacity-40">{{ icon("external-link") }}</span>
                    {% endif %}
                  </a>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>

        <!-- Projects Dropdown -->
        <div class="relative group">
          <button class="flex items-center gap-1 text-gray-600 hover:text-primary-600 transition-colors font-medium dark:text-gray-300">
            {{ icon(navigation.projects.icon) }}
            {{ navigation.projects.label }}
            {{ icon("chevron-down") }}
          </button>
          <div class="absolute left-0 top-full mt-2 w-52 bg-white rounded-lg shadow-lg border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all z-50 dark:bg-gray-800 dark:border-gray-700">
            <div class="py-2">
              {% for item in navigation.projects.items %}
                <a href="{{ item.url }}"
                   {% if item.external %}target="_blank" rel="noopener"{% endif %}
                   class="flex items-center gap-3 px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-600 dark:text-gray-300 dark:hover:bg-gray-700">
                  <span class="text-gray-400">{{ icon(item.icon) }}</span>
                  {{ item.label }}
                  {% if item.external %}
                    <span class="ml-auto opacity-40">{{ icon("external-link") }}</span>
                  {% endif %}
                </a>
              {% endfor %}
            </div>
          </div>
        </div>

        <!-- Quick Links -->
        {% for item in navigation.quickLinks %}
          <a href="{{ item.url }}"
             {% if item.external %}target="_blank" rel="noopener"{% endif %}
             class="flex items-center gap-1 text-gray-600 hover:text-primary-600 transition-colors font-medium dark:text-gray-300">
            {{ icon(item.icon) }}
            {{ item.label }}
          </a>
        {% endfor %}

        <!-- CTA Button -->
        <a href="{{ navigation.cta.url }}"
           {% if navigation.cta.external %}target="_blank" rel="noopener"{% endif %}
           class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-primary-600 text-white text-sm font-medium rounded-lg hover:bg-primary-700 transition-colors">
          {{ icon(navigation.cta.icon) }}
          {{ navigation.cta.label }}
        </a>

        <!-- Dark Mode Toggle -->
        <button id="theme-toggle"
                class="p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors dark:text-gray-300 dark:hover:text-white dark:hover:bg-gray-800"
                title="Toggle dark mode">
          <span id="theme-icon-light" class="hidden">{{ icon("sun", "w-5 h-5") }}</span>
          <span id="theme-icon-dark">{{ icon("moon", "w-5 h-5") }}</span>
        </button>
      </nav>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button"
              class="md:hidden p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors dark:text-gray-300 dark:hover:text-white dark:hover:bg-gray-800">
        {{ icon("menu", "w-6 h-6") }}
      </button>

    </div>

    <!-- Mobile Menu -->
    <nav id="mobile-menu" class="hidden md:hidden py-4 border-t border-gray-200 dark:border-gray-700">
      <div class="space-y-1">

        <!-- Docs Section -->
        <div class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider dark:text-gray-400">{{ navigation.docs.label }}</div>
        {% for item in navigation.docs.items %}
          {% if not item.divider %}
            <a href="{{ item.url }}"
               {% if item.external %}target="_blank" rel="noopener"{% endif %}
               class="flex items-center gap-3 px-4 py-2 text-gray-600 hover:text-primary-600 hover:bg-gray-50 rounded-lg dark:text-gray-300 dark:hover:bg-gray-800">
              <span class="text-gray-400">{{ icon(item.icon) }}</span>
              {{ item.label }}
            </a>
          {% endif %}
        {% endfor %}

        <!-- Projects Section -->
        <div class="px-4 py-2 mt-4 text-xs font-semibold text-gray-500 uppercase tracking-wider dark:text-gray-400">{{ navigation.projects.label }}</div>
        {% for item in navigation.projects.items %}
          <a href="{{ item.url }}"
             {% if item.external %}target="_blank" rel="noopener"{% endif %}
             class="flex items-center gap-3 px-4 py-2 text-gray-600 hover:text-primary-600 hover:bg-gray-50 rounded-lg dark:text-gray-300 dark:hover:bg-gray-800">
            <span class="text-gray-400">{{ icon(item.icon) }}</span>
            {{ item.label }}
          </a>
        {% endfor %}

        <!-- Quick Links -->
        {% if navigation.quickLinks.length > 0 %}
          <div class="px-4 py-2 mt-4 text-xs font-semibold text-gray-500 uppercase tracking-wider dark:text-gray-400">Links</div>
          {% for item in navigation.quickLinks %}
            <a href="{{ item.url }}"
               {% if item.external %}target="_blank" rel="noopener"{% endif %}
               class="flex items-center gap-3 px-4 py-2 text-gray-600 hover:text-primary-600 hover:bg-gray-50 rounded-lg dark:text-gray-300 dark:hover:bg-gray-800">
              <span class="text-gray-400">{{ icon(item.icon) }}</span>
              {{ item.label }}
            </a>
          {% endfor %}
        {% endif %}

        <!-- CTA -->
        <div class="px-4 pt-4">
          <a href="{{ navigation.cta.url }}"
             {% if navigation.cta.external %}target="_blank" rel="noopener"{% endif %}
             class="flex items-center justify-center gap-2 w-full px-4 py-2 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors">
            {{ icon(navigation.cta.icon) }}
            {{ navigation.cta.label }}
          </a>
        </div>
      </div>
    </nav>

  </div>
</header>
