---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }}</title>
    <description>{{ site.description }}</description>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml"/>
    <lastBuildDate>{{ "" | date("%a, %d %b %Y %H:%M:%S %z") }}</lastBuildDate>
    {%- for page in collections.allPages | reverse | limit(20) %}
    {%- if page.data.title and page.data.published !== false %}
    <item>
      <title>{{ page.data.title | escape }}</title>
      <description>{{ page.data.description | escape }}</description>
      <link>{{ site.url }}{{ page.url | url }}</link>
      <guid isPermaLink="true">{{ site.url }}{{ page.url | url }}</guid>
      <pubDate>{{ page.date | date("%a, %d %b %Y %H:%M:%S %z") }}</pubDate>
    </item>
    {%- endif %}
    {%- endfor %}
  </channel>
</rss>
